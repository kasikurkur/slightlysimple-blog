---
layout: "base.njk"
title: "ホーム"
---

<div class="max-w-4xl mx-auto px-6 py-8">
    <header class="text-center mb-12">
        <h1 class="text-5xl font-bold text-white mb-4">{{ site.title }}</h1>
        <p class="text-xl text-gray-300">{{ site.description }}</p>
    </header>

    <section>
        <h2 class="text-3xl font-semibold text-white mb-8">最新記事</h2>
        
        <div class="space-y-8">
            {% for post in collections.posts | reverse %}
            <article class="bg-gray-800 rounded-lg p-6">
                <h3 class="text-2xl font-semibold mb-3">
                    <a href="{{ post.url }}" class="text-white hover:text-blue-300">
                        {{ post.data.title }}
                    </a>
                </h3>
                
                <div class="text-gray-400 text-sm mb-4">
                    <span>{{ post.date | readableDate }}</span>
                </div>
                
                <p class="text-gray-300 leading-relaxed">
                    {{ post.data.description }}
                </p>
                
                <div class="mt-4">
                    <a href="{{ post.url }}" class="text-blue-400 hover:text-blue-300">
                        続きを読む →
                    </a>
                </div>
            </article>
            {% endfor %}
        </div>
    </section>
</div>
